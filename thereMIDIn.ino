void displayLogo()
{
  display.clearDisplay();
  display.drawBitmap(0, 0, logo, SCREEN_WIDTH, SCREEN_HEIGHT, SSD1306_WHITE);
  display.display();
  delay(500);
  display.setTextSize(1);
  display.setTextColor(SSD1306_BLACK);
  display.setCursor(3, 3);
  display.println("ThereMIDIn");
  display.print("firmware ");
  display.println(VERSION);
  display.display();
  delay(2000);
}


void updateMidiNoteNumberAndVelocity()
{
  const int noteSensorRead = analogRead(NOTE_PIN);
  const int velocitySensorRead = analogRead(VELOCITY_PIN);
  
  if (noteSensorRead > 500 && noteSensorRead < 3600 && velocitySensorRead > 500 && velocitySensorRead < 3600)
  {
    const int velo = map(velocitySensorRead, 500, 3600, 0, 127);
    currentVelocity = velo;

    const int sensorNoteChange = map(noteSensorRead, 500, 3600, 0, numberOfNotes - 1);
    const int octaveNoteChange = (currentOctave + 1) * 12;
    const int currentScaleLength = scaleLengths[currentScaleIndex];
    const int intervalsNoteChange = intervals[currentScaleIndex][sensorNoteChange % currentScaleLength];
    const int intervalsOverflowNoteChange = sensorNoteChange / currentScaleLength * 12;
    currentNoteNumber = octaveNoteChange + currentKeyIndex + intervalsNoteChange + intervalsOverflowNoteChange;
  }
  else
  {
    currentNoteNumber = 0;
    currentVelocity = 0;
  }
}


void MIDImessage(int command, int MIDInote, int MIDIvelocity)
{
  // TODO: change midi channel
  Serial2.write(command + currentMidiChannel);
  Serial2.write(MIDInote);
  Serial2.write(MIDIvelocity); 
}


void updateDisplay()
{
  display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);

  display.setCursor(0, 3);

  display.print("note: ");
  display.println(midiNoteNumberToName[currentNoteNumber]);

  display.print("key: ");
  display.println(keyNames[currentKeyIndex]);

  display.print("scale: ");
  display.println(scaleNames[currentScaleIndex]);

  display.print("octave: ");
  display.println(currentOctave);

  display.print("velocity: ");
  display.println(currentVelocity);

  display.print("MIDI channel: ");
  display.println(currentMidiChannel);

  display.display();
}


void setup()
{
  pinMode(VELOCITY_PIN, INPUT);
  pinMode(NOTE_PIN, INPUT);
  Serial2.begin(31250, SERIAL_8N1, RXD2, TXD2);
  Serial.begin(115200);

  if(!display.begin(SSD1306_SWITCHCAPVCC))
  {
    Serial.println(F("SSD1306 allocation failed"));
    for(;;);
  }

  displayLogo();
}


void loop()
{
  updateMidiNoteNumberAndVelocity();
  updateDisplay();

  MIDImessage(noteOnCommand, currentNoteNumber, currentVelocity);
  delay(50);
  MIDImessage(noteOffCommand, currentNoteNumber, 0);
  delay(50);
}
